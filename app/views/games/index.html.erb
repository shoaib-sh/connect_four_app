<p id="notice"><%= notice %></p>

<h1>Games</h1>

<br>

<%= link_to 'New Game', new_game_path %>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Current player</th>
      <th>Winner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.current_player %></td>
        <td><%= game.winner %></td>
        <td><%= link_to 'Show / Edit', play_game_path(game) %></td>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
